{
    "name": "lnote",
    "displayName": "lnote",
    "description": "A simple note-taking extension.",
    "version": "0.0.5",
    "icon": "icon.png",
    "publisher": "shinhwagk",
    "preview": true,
    "engines": {
        "vscode": "^1.71.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shinhwagk/vscode-note"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "note",
        "vscode"
    ],
    "license": "MIT",
    "activationEvents": [
        "onView:domainExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vsnote-explorer",
                    "title": "lnote",
                    "icon": "images/note.svg"
                }
            ]
        },
        "views": {
            "vsnote-explorer": [
                {
                    "id": "domainExplorer",
                    "name": "domain"
                },
                {
                    "id": "filesExplorer",
                    "name": "files",
                    "when": "lnote.files-explorer"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "lnote.domain.create",
                    "group": "navigation",
                    "when": "view == domainExplorer"
                },
                {
                    "command": "lnote.domain.refresh",
                    "group": "navigation",
                    "when": "view == domainExplorer"
                },
                {
                    "command": "lnote.files.openTerminal",
                    "when": "view == filesExplorer",
                    "group": "navigation@3"
                },
                {
                    "command": "lnote.files.edit.open",
                    "when": "view == filesExplorer",
                    "group": "navigation@3"
                },
                {
                    "command": "lnote.files.close",
                    "group": "navigation@1",
                    "when": "view == filesExplorer"
                },
                {
                    "command": "lnote.files.refresh",
                    "group": "navigation@2",
                    "when": "view == filesExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "lnote.domain.create",
                    "when": "view == domainExplorer",
                    "group": "0_domain"
                },
                {
                    "command": "lnote.domain.rename",
                    "when": "view == domainExplorer",
                    "group": "2_domain"
                },
                {
                    "command": "lnote.domain.remove",
                    "when": "view == domainExplorer",
                    "group": "3_domain"
                },
                {
                    "command": "lnote.domain.search",
                    "when": "view == domainExplorer",
                    "group": "4_domain"
                },
                {
                    "command": "lnote.domain.move",
                    "when": "view == domainExplorer",
                    "group": "2_domain"
                },
                {
                    "command": "lnote.domain.notes.create",
                    "when": "view == domainExplorer && viewItem == emptyNotes",
                    "group": "1_domain"
                }
            ]
        },
        "configuration": [
            {
                "type": "object",
                "title": "lnote",
                "properties": {
                    "lnote.notespath": {
                        "type": "string",
                        "description": "lnote data location"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "lnote.domain.create",
                "title": "New",
                "icon": {
                    "light": "images/light/add.svg",
                    "dark": "images/dark/add.svg"
                }
            },
            {
                "command": "lnote.domain.move",
                "title": "Move"
            },
            {
                "command": "lnote.domain.rename",
                "title": "Rename"
            },
            {
                "command": "lnote.domain.remove",
                "title": "Remove"
            },
            {
                "command": "lnote.domain.search",
                "title": "Search"
            },
            {
                "command": "lnote.domain.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            },
            {
                "command": "lnote.files.close",
                "title": "Close",
                "icon": {
                    "light": "images/light/close.svg",
                    "dark": "images/dark/close.svg"
                }
            },
            {
                "command": "lnote.files.openTerminal",
                "title": "open terminal",
                "icon": {
                    "light": "images/light/terminal.svg",
                    "dark": "images/dark/terminal.svg"
                }
            },
            {
                "command": "lnote.domain.notes.create",
                "title": "Create Notes"
            },
            {
                "command": "lnote.files.edit.open",
                "title": "open edit window",
                "icon": {
                    "light": "images/light/edit.svg",
                    "dark": "images/dark/edit.svg"
                }
            },
            {
                "command": "lnote.files.refresh",
                "title": "refresh",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            }
        ],
        "viewsWelcome": [
            {
                "view": "domainExplorer",
                "contents": "Please select a location to save the notes.\n[Notes Location](command:lnote.choose-location)"
            }
        ]
    },
    "extensionPack": [
        "docsmsft.docs-markdown",
        "docsmsft.docs-preview"
    ],
    "scripts": {
        "vscode:prepublish": "rm -fr out && webpack --mode production",
        "compile": "tsc -p ./",
        "compile-watch": "tsc -p ./ -w",
        "compile-web": "tsc -p ./web/tsconfig.json",
        "compile-web-watch": "tsc -p ./web/tsconfig.json -w",
        "test": "jest",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/object-path": "^0.11.1",
        "@types/webpack-env": "^1.18.0",
        "copy-webpack-plugin": "^11.0.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.3.0",
        "eslint-plugin-promise": "^6.0.1",
        "ts-node": "^10.9.1",
        "@types/vscode": "^1.71.0",
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "eslint": "^8.24.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "typescript": "^4.8.4",
        "ts-loader": "^9.4.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "@vscode/test-electron": "^2.1.5"
    },
    "dependencies": {
        "fs-extra": "^10.1.0",
        "object-path": "^0.11.8",
        "yaml": "^2.1.2"
    }
}