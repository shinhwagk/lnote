{
    "name": "vscode-note",
    "displayName": "vscode-note",
    "description": "A simple note-taking extension.",
    "version": "0.10.12",
    "icon": "icon.png",
    "publisher": "shinhwagk",
    "preview": true,
    "engines": {
        "vscode": "^1.63.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shinhwagk/vscode-note"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "note",
        "vscode"
    ],
    "license": "MIT",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vsnote-explorer",
                    "title": "vscode-note",
                    "icon": "images/note.svg"
                }
            ]
        },
        "views": {
            "vsnote-explorer": [
                {
                    "id": "domainExplorer",
                    "name": "domain"
                },
                {
                    "id": "filesExplorer",
                    "name": "files",
                    "when": "vscode-note.files-explorer"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "vscode-note.domain.create",
                    "group": "navigation",
                    "when": "view == domainExplorer"
                },
                {
                    "command": "vscode-note.domain.refresh",
                    "group": "navigation",
                    "when": "view == domainExplorer"
                },
                {
                    "command": "vscode-note.files.openTerminal",
                    "when": "view == filesExplorer",
                    "group": "navigation@3"
                },
                {
                    "command": "vscode-note.files.edit.open",
                    "when": "view == filesExplorer",
                    "group": "navigation@3"
                },
                {
                    "command": "vscode-note.files.close",
                    "group": "navigation@1",
                    "when": "view == filesExplorer"
                },
                {
                    "command": "vscode-note.files.refresh",
                    "group": "navigation@2",
                    "when": "view == filesExplorer"
                }
            ],
            "view/item/context": [
                {
                    "command": "vscode-note.domain.create",
                    "when": "view == domainExplorer",
                    "group": "0_domain"
                },
                {
                    "command": "vscode-note.domain.rename",
                    "when": "view == domainExplorer",
                    "group": "2_domain"
                },
                {
                    "command": "vscode-note.domain.search",
                    "when": "view == domainExplorer",
                    "group": "3_domain"
                },
                {
                    "command": "vscode-note.domain.move",
                    "when": "view == domainExplorer",
                    "group": "2_domain"
                },
                {
                    "command": "vscode-note.notes.create",
                    "when": "view == domainExplorer && viewItem == emptyNotes",
                    "group": "1_domain"
                },
                {
                    "command": "vscode-note.files.file.url.raw",
                    "when": "view == filesExplorer && viewItem == file"
                },
                {
                    "command": "vscode-note.files.file.url",
                    "when": "view == filesExplorer && viewItem == file"
                }
            ]
        },
        "configuration": [
            {
                "type": "object",
                "title": "vscode-note",
                "properties": {
                    "vscode-note.dbpath": {
                        "type": "string",
                        "default": "~/vscode-note",
                        "description": "note data location"
                    },
                    "vscode-note.github": {
                        "type": "string",
                        "description": "github remote"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "vscode-note.domain.create",
                "title": "New Domain",
                "icon": {
                    "light": "images/light/add.svg",
                    "dark": "images/dark/add.svg"
                }
            },
            {
                "command": "vscode-note.domain.move",
                "title": "Move Domain"
            },
            {
                "command": "vscode-note.domain.rename",
                "title": "Rename Domain"
            },
            {
                "command": "vscode-note.domain.search",
                "title": "Search Domain"
            },
            {
                "command": "vscode-note.domain.refresh",
                "title": "Domain Refresh",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            },
            {
                "command": "vscode-note.files.close",
                "title": "Close",
                "icon": {
                    "light": "images/light/close.svg",
                    "dark": "images/dark/close.svg"
                }
            },
            {
                "command": "vscode-note.files.openTerminal",
                "title": "open terminal",
                "icon": {
                    "light": "images/light/terminal.svg",
                    "dark": "images/dark/terminal.svg"
                }
            },
            {
                "command": "vscode-note.notes.create",
                "title": "Create Notes"
            },
            {
                "command": "vscode-note.files.edit.open",
                "title": "open edit window",
                "icon": {
                    "light": "images/light/edit.svg",
                    "dark": "images/dark/edit.svg"
                }
            },
            {
                "command": "vscode-note.files.refresh",
                "title": "refresh",
                "icon": {
                    "light": "images/light/refresh.svg",
                    "dark": "images/dark/refresh.svg"
                }
            },
            {
                "command": "vscode-note.files.file.url.raw",
                "title": "github raw url"
            },
            {
                "command": "vscode-note.files.file.url",
                "title": "github url"
            }
        ]
    },
    "extensionPack": [
        "docsmsft.docs-markdown",
        "docsmsft.docs-preview"
    ],
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "tsc -p ./",
        "compile-web": "tsc -p ./web/tsconfig.json",
        "compile-web-watch": "tsc -p ./web/tsconfig.json -w",
        "test": "jest"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^27.4.0",
        "@types/node": "14.x",
        "@types/object-path": "^0.11.1",
        "@types/rimraf": "^3.0.2",
        "@types/vscode": "^1.63.1",
        "@vscode/test-electron": "^2.1.0",
        "copy-webpack-plugin": "^10.2.0",
        "jest": "^27.4.7",
        "ts-jest": "^27.1.3",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4",
        "webpack": "^5.66.0",
        "webpack-cli": "^4.9.1"
    },
    "dependencies": {
        "fs-extra": "^10.0.0",
        "object-path": "^0.11.8",
        "rimraf": "^3.0.2"
    }
}
