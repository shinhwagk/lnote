{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "outDir": "out",
        "lib": [
            "esnext",
            "dom"
        ],
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "typeRoots": [
            // "./node_modules/@types",
            // "./typings"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}